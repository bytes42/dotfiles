#-------------------------------------------------------------
# try turn on term with color
#-------------------------------------------------------------
if [ -e /usr/share/terminfo/78/xterm-256color ]; then
	export TERM='xterm-256color'
else
	export TERM='xterm'
fi

#-------------------------------------------------------------
# aliases
#-------------------------------------------------------------
alias ls='ls -hG'


#-------------------------------------------------------------
# C++
#-------------------------------------------------------------
export GTAGSGLOBAL=/opt/local/bin/global
